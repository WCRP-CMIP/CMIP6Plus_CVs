{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "@id": {
        "type": "string",
        "pattern": "^cmip6plus:core/descriptors$"
      },
      "@type": {
        "type": "string",
        "pattern": "^core-decriptors$"
      },
      "mip-era": {
        "type": "object",
        "properties": {
          "@id": {
            "type": "string",
            "pattern": "^mip-cmor-tables:auxillary/mip-era/.*$"
          }
        },
        "required": ["@id"]
      },
      "product": {
        "type": "object",
        "properties": {
          "@id": {
            "type": "string",
            "pattern": "^mip-cmor-tables:auxillary/product/.*$"
          }
        },
        "required": ["@id"]
      },
      "tracking-id": {
        "type": "string",
        "pattern": "^hdl:.*/.*$"
      },
      "DRS": {
        "type": "object",
        "properties": {
          "directory_path_example": {
            "type": "string"
          },
          "directory_path_sub_experiment_example": {
            "type": "string"
          },
          "directory_path_template": {
            "type": "string"
          },
          "filename_example": {
            "type": "string"
          },
          "filename_sub_experiment_example": {
            "type": "string"
          },
          "filename_template": {
            "type": "string"
          }
        },
        "required": [
          "directory_path_example",
          "directory_path_sub_experiment_example",
          "directory_path_template",
          "filename_example",
          "filename_sub_experiment_example",
          "filename_template"
        ]
      },
      "required-global-attributes": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      }
    },
    "required": ["@id", "@type", "mip-era", "product", "tracking-id", "DRS", "required-global-attributes"]
  }
  